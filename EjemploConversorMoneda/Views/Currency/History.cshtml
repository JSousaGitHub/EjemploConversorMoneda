@model List<CurrencyQuery>

<h2>Historial de consultas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>De</th>
            <th>A</th>
            <th>Cantidad</th>
            <th>Resultado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var query in Model)
        {
            <tr>
                <td>@query.QueryDate</td>
                <td>@query.FromCurrency</td>
                <td>@query.ToCurrency</td>
                <td>@query.Amount</td>
                <td>@query.Result</td>
            </tr>
        }
    </tbody>
</table>
