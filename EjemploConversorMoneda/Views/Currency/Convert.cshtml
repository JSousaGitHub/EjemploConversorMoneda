@model CurrencyConversionViewModel

<form asp-action="Convert" method="post">
    <div>
        <label for="Amount">Importe:</label>
        <input asp-for="Importe" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="Importe"></span>
    </div>
    <div>
        <label for="SourceCurrency">Divisa de origen:</label>
        <select asp-for="MonedaOrigen" asp-items="@(new SelectList(Model.listaMonedValid))"></select>
        <span asp-validation-for="MonedaOrigen"></span>
    </div>
    <div>
        <label for="TargetCurrency">Divisa de destino:</label>
        <select asp-for="MonedaDestino" asp-items="@(new SelectList(Model.listaMonedValid))"></select>
        <span asp-validation-for="MonedaDestino"></span>
    </div>
    <button type="submit">Convertir</button>
</form>

@if (Model.Result != 0)
{
    <div>
        <h2>Resultado de la conversión:</h2>
        <p>@Model.Result</p>
    </div>
}
